---
layout: layouts/base
---
<header class="main__header">
    <h1>{{ title }}</h1>
    <p>{{ desc }}</p>
</header>
<post-wrapper>
    <aside class="post__sidebar">
        <div class="post__meta">
            <p>{{ langstrings[page.lang].published }} <time datetime="{{ date }}">{{ date | formatDate(page.lang) }}</time></p>
            {% if updated %}
            <p>{{ langstrings[page.lang].updated }} <time datetime="{{ updated }}">{{ updated | formatDate }}</time></p>
            {% endif %}
            <p>{{ langstrings[page.lang].author }} {{ sitemeta[page.lang].siteAuthor.name }}</p>
        </div>
        {% if toc %}
        <details class="toc__wrapper">
            <summary class="toc__heading" id="toc-heading">
                {{ langstrings[page.lang].toc }}
            </summary>
            {{ content | toc | safe }}
        </details>
        {% endif %}
    </aside>
    <article class="prose">
        {{ content | safe }}

        <a class="post__emailreply" href="mailto:{{ sitemeta.siteAuthor.email }}?subject={{ langstrings[page.lang].emailReplySubject }}{{ title }}">
            <svg class="inline-icon" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512"><!--!Font Awesome Free 6.6.0 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2024 Fonticons, Inc.--><path d="M48 64C21.5 64 0 85.5 0 112c0 15.1 7.1 29.3 19.2 38.4L236.8 313.6c11.4 8.5 27 8.5 38.4 0L492.8 150.4c12.1-9.1 19.2-23.3 19.2-38.4c0-26.5-21.5-48-48-48L48 64zM0 176L0 384c0 35.3 28.7 64 64 64l384 0c35.3 0 64-28.7 64-64l0-208L294.4 339.2c-22.8 17.1-54 17.1-76.8 0L0 176z"/></svg>
            {{ langstrings[page.lang].replyByEmail }}
        </a>

        {%- if collections.posts %}
        <nav aria-label="{{ langstrings[page.lang].nextPrev }}">
            {%- set previousPost = collections.posts | getPreviousCollectionItem %}
            {%- set nextPost = collections.posts | getNextCollectionItem %}
            {%- if nextPost or previousPost %}
            <ul>
                {%- if previousPost %}
                <li>
                    <p>Previous Post:</p>
                    <a href="{{ previousPost.url }}">{{ previousPost.data.title }}</a>
                </li>
                {% endif %}
                {%- if nextPost %}
                <li>
                    <p>Next Post:</p>
                    <a href="{{ nextPost.url }}">{{ nextPost.data.title }}</a>
                </li>
                {% endif %}
            </ul>
            {%- endif %}
        </nav>
        {%- endif %}
    </article>
</post-wrapper>