---
layout: layouts/base
---
<header class="main__header">
    <h1>{{ title }}</h1>
    <p>{{ desc }}</p>
</header>
<post-wrapper>
    <aside>
        <div>
            <p>{{ langstrings[page.lang].published }} <time datetime="{{ date }}">{{ date | formatDate(page.lang) }}</time></p>
            {% if updated %}
            <p>{{ langstrings[page.lang].updated }} <time datetime="{{ updated }}">{{ updated | formatDate }}</time></p>
            {% endif %}
            <p>{{ langstrings[page.lang].author }} {{ sitemeta[page.lang].siteAuthor.name }}</p>
        </div>
    </aside>
    <article class="prose">
        {{ content | safe }}
        {%- if collections.posts %}
        <nav aria-label="{{ langstrings[page.lang].nextPrev }}">
            {%- set previousPost = collections.posts | getPreviousCollectionItem %}
            {%- set nextPost = collections.posts | getNextCollectionItem %}
            {%- if nextPost or previousPost %}
            <ul>
                {%- if previousPost %}
                <li>
                    <p>Previous Post:</p>
                    <a href="{{ previousPost.url }}">{{ previousPost.data.title }}</a>
                </li>
                {% endif %}
                {%- if nextPost %}
                <li>
                    <p>Next Post:</p>
                    <a href="{{ nextPost.url }}">{{ nextPost.data.title }}</a>
                </li>
                {% endif %}
            </ul>
            {%- endif %}
        </nav>
        {%- endif %}
    </article>
</post-wrapper>